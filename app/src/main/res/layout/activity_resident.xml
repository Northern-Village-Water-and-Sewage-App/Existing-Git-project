<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResidentActivity">

    <Button
        android:id="@+id/analyticsButton"
        android:layout_width="144dp"
        android:layout_height="73dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="427dp"
        android:text="@string/analytics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manualDeliveryButton"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="522dp"
        android:text="@string/get_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="494dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="108dp"
        android:progressDrawable="@drawable/verticalprogressbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sewageAlarm"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="291dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#00BCD4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/waterAlarm"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#00BCD4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="261dp"
        android:text="Water"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="299dp"
        android:layout_marginTop="261dp"
        android:text="Sewage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageFromTownTextView"
        android:layout_width="164dp"
        android:layout_height="17dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="332dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>