<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/noneManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorPrimary"
        android:text="@string/none"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/onTheWayManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noneManagerTimeEstimateButton"
        android:layout_alignStart="@+id/noneManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/on_the_way"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/beforeBreakManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onTheWayManagerTimeEstimateButton"
        android:layout_alignStart="@+id/onTheWayManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/before_break"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/todayManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beforeBreakManagerTimeEstimateButton"
        android:layout_alignStart="@+id/beforeBreakManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/today"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/tomorrowManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todayManagerTimeEstimateButton"
        android:layout_alignStart="@+id/todayManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/tomorrow"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/ignoreManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tomorrowManagerTimeEstimateButton"
        android:layout_alignStart="@+id/tomorrowManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/ignore"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/deleteManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ignoreManagerTimeEstimateButton"
        android:layout_alignStart="@+id/ignoreManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="@string/delete"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/cancelManagerTimeEstimateButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteManagerTimeEstimateButton"
        android:layout_alignStart="@+id/deleteManagerTimeEstimateButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimary"
        android:text="@string/cancel"
        android:textColor="@color/colorLightText" />
</RelativeLayout>