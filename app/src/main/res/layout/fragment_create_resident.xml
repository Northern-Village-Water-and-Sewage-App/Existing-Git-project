<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/driverNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/housNumEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverNameEditText"
        android:layout_alignStart="@+id/driverNameEditText"
        android:layout_alignEnd="@+id/driverNameEditText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/house_number"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/driverPinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sewage_tank_spinner"
        android:layout_alignStart="@+id/housNumEditText"
        android:layout_alignEnd="@+id/housNumEditText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/pin"
        android:inputType="number"
        android:maxLength="3"
        android:textAlignment="center" />

    <Button
        android:id="@+id/pinButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverPinEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/random_pin"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/addUserButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pinButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorPrimary"
        android:text="@string/add"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/cancelAddUserButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pinButton"
        android:layout_alignStart="@+id/pinButton"
        android:layout_alignEnd="@+id/pinButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorPrimary"
        android:text="@string/cancel"
        android:textColor="@color/colorLightText" />

    <Button
        android:id="@+id/removeUserButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addUserButton"
        android:layout_alignStart="@+id/addUserButton"
        android:layout_alignEnd="@+id/addUserButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/remove"
        android:textColor="@color/colorLightText" />

    <Spinner
        android:id="@+id/water_tank_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/housNumEditText"
        android:layout_alignStart="@+id/housNumEditText"
        android:layout_alignEnd="@+id/housNumEditText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scrollbarSize="28sp" />

    <Spinner
        android:id="@+id/sewage_tank_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water_tank_spinner"
        android:layout_alignStart="@+id/water_tank_spinner"
        android:layout_alignEnd="@+id/water_tank_spinner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scrollbarSize="28sp" />


</RelativeLayout>