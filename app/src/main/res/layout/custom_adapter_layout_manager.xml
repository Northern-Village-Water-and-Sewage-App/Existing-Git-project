<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewManager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeStampTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/time_stamp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/houseNumTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/house_number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tankTypeTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/tank_type"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/timeEstimateTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/time_est"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="44.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customAdapterTV1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/textview" />

        <TextView
            android:id="@+id/customAdapterTV3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/textview3" />

        <TextView
            android:id="@+id/customAdapterTV4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/textview4" />

        <TextView
            android:id="@+id/customAdapterTV5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/textview5" />

    </LinearLayout>


</LinearLayout>