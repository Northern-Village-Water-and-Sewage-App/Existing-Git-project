<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerActivity">

    <Button
        android:id="@+id/manualserviceButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="19dp"
        android:text="@string/add_service"
        app:layout_constraintBaseline_toBaselineOf="@+id/getReportButton"
        app:layout_constraintEnd_toStartOf="@+id/getReportButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/analyticsButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="19dp"
        android:text="@string/analytics"
        app:layout_constraintBaseline_toBaselineOf="@+id/disableResidentButton"
        app:layout_constraintEnd_toStartOf="@+id/disableResidentButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:text="Add Message"
        app:layout_constraintBottom_toTopOf="@+id/disableResidentButton"
        app:layout_constraintEnd_toEndOf="@+id/analyticsButton"
        app:layout_constraintStart_toStartOf="@+id/analyticsButton"
        app:layout_constraintTop_toBottomOf="@+id/WorklistListView" />

    <Button
        android:id="@+id/addResidentButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="19dp"
        android:text="Add Resident"
        app:layout_constraintBaseline_toBaselineOf="@+id/addDriverButton"
        app:layout_constraintEnd_toStartOf="@+id/addDriverButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/getReportButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="24dp"
        android:text="@string/get_reports"
        app:layout_constraintBottom_toTopOf="@+id/addDriverButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/manualserviceButton"
        app:layout_constraintTop_toBottomOf="@+id/disableResidentButton" />

    <Button
        android:id="@+id/disableResidentButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="16dp"
        android:text="@string/disable_resident"
        app:layout_constraintBottom_toTopOf="@+id/getReportButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/analyticsButton"
        app:layout_constraintTop_toBottomOf="@+id/messageButton" />

    <Button
        android:id="@+id/addDriverButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="64dp"
        android:text="Add Driver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addResidentButton"
        app:layout_constraintTop_toBottomOf="@+id/getReportButton" />

    <ListView
        android:id="@+id/WorklistListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/messageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>