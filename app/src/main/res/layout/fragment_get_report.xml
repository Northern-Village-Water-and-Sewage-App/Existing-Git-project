<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/emailAddressReportEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/allReportsButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailAddressReportEditText"
        android:layout_alignEnd="@+id/emailAddressReportEditText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="42dp"
        android:background="@color/colorPrimary"
        android:padding="4dp"
        android:text="@string/get_all_reports"
        android:textColor="@color/colorLightText" />

    <Spinner
        android:id="@+id/companyReportSpinner"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/allReportsButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="-31dp"
        android:entries="@array/companies" />

    <Button
        android:id="@+id/ReportsByCompanyButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelGetReportsButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/reports_by_company"
        android:textColor="@color/colorLightText" />


    <Button
        android:id="@+id/cancelGetReportsButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyReportSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/cancel"
        android:textColor="@color/colorLightText" />


    />
</RelativeLayout>