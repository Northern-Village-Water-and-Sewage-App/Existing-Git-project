<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/companyReportSpinner"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:entries="@array/complaintTypes" />

    <EditText
        android:id="@+id/complaintDriverReportEditText"
        android:layout_width="336dp"
        android:layout_height="394dp"
        android:layout_alignStart="@+id/companyReportSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="@string/complaint"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="8" />

    <Button
        android:id="@+id/ReportsByCompanyButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/complaintDriverReportEditText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="0"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/cancelGetReportsButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/complaintDriverReportEditText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0"
        android:layout_marginTop="568dp"
        android:text="@string/cancel" />

    />
</RelativeLayout>