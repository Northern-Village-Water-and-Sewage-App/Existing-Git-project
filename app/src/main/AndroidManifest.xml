<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.northernvillagewaterandsewageapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait">

        <activity
            android:name=".ManagerAnalyticsActivity"
            android:label="@string/analytics"
            android:parentActivityName=".ManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ResidentAnalyticsActivity"
            android:label="@string/analytics"
            android:parentActivityName=".ResidentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DriverActivity"
            android:label="Driver"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ManagerActivity"
            android:label="Manager"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ResidentActivity"
            android:label="Resident"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="Uima">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="Settings" />

    </application>

</manifest>